// Left menu list items
mixin home_menu_item(name, number, menu_link)
	div.row.menu_link
		div.col-xs-12
			img.menu_icon(src='images/menu_icons/12.'+number+'.png')
			span.faux_link(class=menu_link) #{name}

mixin side_menu()
	div#left_menu
		div#menu_header #TECHITBACK
		div#search_bar
			input(type='text', name='search_bar')
		+home_menu_item('WELCOME TO OUR HOUR', 1, 'welcome_link')
		+home_menu_item('ABOUT', 2, 'about_link')
		+home_menu_item('BLOG', 3, 'blog_link')
		+home_menu_item('CYBERBULLYING AND ABUSE', 4, 'cyberbullying_link')
		+home_menu_item('TECH ADDICTION', 5, 'tech_addiction_link')
		+home_menu_item('CYBERCRIME NEWS', 6, 'cybercrime_link')
		+home_menu_item('TIPS FOR TEENS', 7, '')
		+home_menu_item('SCHOOLS + PARENTS', 8, '')
		+home_menu_item('CORPORATE PARTNERS', 9, '')
		+home_menu_item('CONTACT US', 11, '')
		a(href='yanng')
			+home_menu_item('YES AND NO NO GIRLS', 12, '')
		div.menu_padding

mixin home_picture(image, text, span_class)
	img.img-responsive(src='images/home/'+image)
	span.textoverlay(class=span_class) #{text}

mixin popup_picture(post, class_link)
	div.popup_picture_box(class=class_link)
		img(src=post.thumbnail)
		div()!=post.title

mixin popup_header(title, image, label, link)
	img#popup_exit(src='images/x.png')
	div.upper_right
		img(src='images/menu_icons/'+image)
		span #{label}
	div(class=link).popup_header
		div #{title}

mixin popup_welcome_header(section)
	img#popup_exit(src='images/x.png')
	div.welcome_upper_left
		img(src=section.image.url)
	div.welcome_label
		div #{section.title}

