mixin welcome_left_button (section)
	div.row.welcome_left_button(class=section.link)
		img(src=section.image.url)
		div.left_button_label #{section.title}

mixin welcome_games_icon (game, selected)
	div.row.welcome_games_icon(class=game.link)
		img(src='images/welcome_icons/5.21.png')
		if game.title == selected.title
			span.selected #{game.title}
		else 
			span #{game.title}
mixin cause_box(cause)
	div.cause_image(class="welcome_causes_"+cause.key+"_link")
		img(src=cause.image.url)

mixin arrow(arrow, link)
	img.arrow(src='images/'+arrow+'.png', class=link)

mixin quiz_link(quiz, bottom)
	- var quiz_class = "quiz_container"
	if bottom
		- quiz_class = "quiz_container bottom"
	div(class=quiz_class)
		a(href=quiz.link target="_blank")
			img(src='images/5.61.png')
		span(id="quiz_"+quiz.key) #{quiz.title}

