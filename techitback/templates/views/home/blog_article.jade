include ../../mixins/home_mixins
include ../../mixins/blog_mixins
extends ../../layouts/blog_layout

block blog_body
	div.container-fluid
		div.row
			div.col-md-10.blog_article_content
				a(href='/blog')
					div.link_to_blog_home Back to main page >>>
				div.article_content
					if post.image
						div.article_image
							img(src=post.image.url)
					div.article_title #{post.title}
					div.article_body()!=post.content.brief
			div.col-md-2.favorites