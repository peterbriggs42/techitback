include ../../mixins/home_mixins
extends ../../layouts/home_popup

block header
	+popup_header("TYPES OF ONLINE ABUSE", "12.4.png", "CYBERBULLYING + ABUSE")
block body
	div.container-fluid(class="popup_body online_abuse_section")
		div.row
			div.col-md-1
				img.arrow(src='images/left.png', class="report_abuse_link")
			div.col-md-5
				img(src=main.image.url)
				div(class='abuse_text')!=main.content.brief
			div.col-md-5
				div.row
					div.col-md-6
						div.row
							+popup_picture(cyberbullying, "oa_cyberbullying_link")
						div.row
							+popup_picture(cyberstalking, "oa_cyberstalking_link")
						div.row
							+popup_picture(pranking, "oa_pranking_link")
					div.col-md-6
						div.row
							+popup_picture(cybersexting, "oa_cybersexting_link")
						div.row
							+popup_picture(strangerdanger, "oa_strangerdanger_link")
			div.col-md-1
				img.arrow(src='images/right.png', class="movement_link")
