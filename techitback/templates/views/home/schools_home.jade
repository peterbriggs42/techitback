include ../../mixins/home_mixins
include ../../mixins/home_mixins_v2
extends ../../layouts/popup_section

block header
	+popup_header("SCHOOLS + PARENTS", null, null, 'home_link', "schools_link")
block left_arrow
	a(href='/blog')
		+arrow_with_link("left")
block body
	div.container-fluid.schools_body
		div.row
			div.col-md-6
				img(src=main.image.url)
				div.title()!=main.content.brief
			div.col-md-6
				div.row
					div.col-xs-6
						+popup_picture_v2(models_parents)
					div.col-xs-6
						+popup_picture_v2(share)
				div.row
					div.col-xs-6
						+popup_picture_v2(models_schools)
					div.col-xs-6
						+popup_picture_v2(join)
block right_arrow
	+arrow("right", "contact_us_link")